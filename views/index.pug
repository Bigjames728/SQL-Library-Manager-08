extends layout

block content
  h1 Books

  a.button(href='/books/new') Add Book

  p 
    table 
      thead 
        tr 
          th id 
          th Title 
          th Author 
          th Genre 
          th Year 
      tbody
        each book in books 
         tr 
          td #{book.id}
            a.button(href=`books/${book.id}`) #{book.title}
          td #{book.title}
          td #{book.author}
          td #{book.genre}
          td #{book.year}
  